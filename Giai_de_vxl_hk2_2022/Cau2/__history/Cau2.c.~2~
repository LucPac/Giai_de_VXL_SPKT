#include<16f887.h>
#device     adc =10
#fuses hs
#use delay(clock=10M)

const unsigned int8 m7d[10]={0xc0,0xf9,0xa4,0xb0,0x99,0x92,0x82,0xf8,0x80,0x90};
unsigned int8 temp=0;

void main()
{
   set_tris_c(0);
   set_tris_d(0);
   set_tris_b(0);
   set_tris_e(0);
   set_tris_a(0x04);
   
   setup_adc( ADC_CLOCK_DIV_32);
   setup_adc_ports(san2|vss_vdd); 
   
   while(true)
   {
      set_adc_channel(2);
      temp = read_adc()*0.4887;
      output_c(m7d[temp/10%10]);
      output_d(m7d[temp/1%10]);
//    hien thi dau do C (1-SANG, 0-TAT)
//     dp    g     f     e     d     c     b     a
//    RA5   RA4   RA3   RA2   RA1   RE2   RE1   RE0  
//     0     1     1     0     0     0     1     1     :do
//     0     0     1     1     1     1     0     0     :C
      output_high(pin_e0);
   }
}
