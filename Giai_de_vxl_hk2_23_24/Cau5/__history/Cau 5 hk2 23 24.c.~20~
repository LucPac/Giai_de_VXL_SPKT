#include<16f887.h>
#fuses intrc_io
#use delay(clock=8M)

#use RS232(baud=9600, xmit=pin_c6, rcv=pin_c7)

#define lcd_rs          pin_e0
#define lcd_rw          pin_e1
#define lcd_e           pin_e2
#define output_lcd      output_d
#include <tv_lcd.c>

UNSIGNED CHAR rcv_data=0;
UNSIGNED INT8 counter=0,counter1=0;

VOID MAIN()
{
   set_tris_d(0);
   set_tris_c(0x80);    
   set_tris_e(0);
   set_tris_a(0xff);
   
   SETUP_TIMER_0(T0_EXT_H_TO_L|T0_DIV_1);
   SET_TIMER0(0);
   
   lcd_setup();
   
   enable_interrupts(GLOBAL);
   enable_interrupts(INT_RDA); 

   WHILE(TRUE)
   {
      if(rcv_data == 'R') //Run
      {
         if(counter <= 250)
         {
            counter = get_timer0();
            lcd_command(0x80);
            printf(lcd_data, "SAN PHAM: %u ",counter);
         }
         else set_timer0(0);
      }
      if(rcv_data == 'P') // Pause
      {
         set_timer0(counter);
         lcd_command(0x80);
         printf(lcd_data, "SAN PHAM: %u ",counter);
      }
      /*else if(rcv_data == 'S') //Stop
      {
         set_timer0(0);
         counter=0;
         lcd_command(0x80);
         printf(lcd_data, "SAN PHAM: %u ",counter);
      }*/
      if(rcv_data == 'S') //Stop
      {
            counter=counter1;
            printf(lcd_data, "SAN PHAM: %u ",counter);
            counter = counter1 = get_timer0();
            lcd_command(0x80);
      }
   }
}
#INT_RDA
void interrupt_rcv_data()
{
   rcv_data = getc();
}

