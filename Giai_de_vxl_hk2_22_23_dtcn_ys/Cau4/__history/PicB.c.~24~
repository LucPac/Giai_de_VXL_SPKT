#include <16f887.h>
#fuses intrc_io
#use delay(clock=8M)
#use RS232(baud=9600, xmit=pin_c6, rcv=pin_c7)

#define ON_OFF pin_b0

unsigned int8 time = 1;
int16 count = 0;

#INT_RDA
void rcv() {
   time = getc();
   if(time == 0) time = 1;
}

#INT_TIMER0
void t0_isr() {
   count++;
   if(count >= time * 10) {
      output_toggle(pin_d0);
      count = 0;
   }
}

void main() {
   set_tris_b(1);
   set_tris_c(0x80);
   set_tris_d(0);

   setup_timer_0(T0_INTERNAL | T0_DIV_16);
   enable_interrupts(GLOBAL);
   enable_interrupts(INT_RDA);
   enable_interrupts(INT_TIMER0);

   while(true) {
      if(!input(ON_OFF)) {
         delay_ms(20);
         if(!input(ON_OFF)) {
            putc(!input(ON_OFF)); // g?i tr?ng thái
            while(!input(ON_OFF));
         }
      }
   }
}

