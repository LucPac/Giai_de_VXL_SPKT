/*
Lam them phan dem tu 0 den 999 roi quay ve 0 (de khong yeu cau)
*/
#include<16f887.h>
#fuses intrc_io
#use delay(clock=8M)

const unsigned int8 m7d[10]={0xc0,0xf9,0xa4,0xb0,0x99,0x92,0x82,0xf8,0x80,0x90};
unsigned int16 count=0, donvi=0, chuc=0, tram=0, i=0;

/*void chuongtrinh_dem()
{
   if(count <= 999 ) 
   {
      count++;
      delay_ms(100);
   }
   else  count=0;
}*/

void chuongtrinh_giaima_xvn(unsigned int16 count)
{
   donvi = m7d[count/1%10];
   chuc  = m7d[count/10%10];
   tram  = m7d[count/100%10];
   
   if(tram==0xc0)
   {
      tram=0xff;
      if(chuc==0xc0) chuc=0xff;
   }
}

void chuongtrinh_hienthi_ledquet()
{
   for(i=0; i<20; i++)
   {
   //hang don vi
   output_b(donvi);
   output_low(pin_d0);
   delay_ms(1);
   output_high(pin_d0);
   
   //hang chuc
   output_b(chuc);
   output_low(pin_d1);
   delay_ms(1);
   output_high(pin_d1); 
   
   //hang tram
   output_b(tram);
   output_low(pin_d2);
   delay_ms(1);
   output_high(pin_d2); 
   }
}

void main()
{
   set_tris_b(0);
   set_tris_d(0);
   
   while(true)
   {
      for(count=0; count<1000; count++)
      {
      chuongtrinh_giaima_xvn(count);
      chuongtrinh_hienthi_ledquet();
      }
   }
}
